<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NothingCalculator.MainPage">

    <ScrollView>
        <Grid Padding="55"
              RowSpacing="8"
              ColumnSpacing="90"
              BackgroundColor="#E6E6E6">
            
            <!-- #region Row/Columns Definitions -->
            <Grid.RowDefinitions>
                <!-- Rows for the equations (0-3) -->
                <RowDefinition Height="200"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                
                <!-- Rows for the Buttons (4-8) -->
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- #endregion -->
            
            <!-- #region Buttons Row 1 -->
            <Button Text="AC"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="4"
                    Grid.Column="0"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="DEL"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="4"
                    Grid.Column="1"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="%"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="4"
                    Grid.Column="2"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="/"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="4"
                    Grid.Column="3"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            <!--#endregion-->

            <!-- #region Buttons Row 2 -->
            <Button Text="7"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="5"
                    Grid.Column="0"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="8"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="5"
                    Grid.Column="1"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="9"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="5"
                    Grid.Column="2"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="x"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="5"
                    Grid.Column="3"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            <!-- #endregion -->

            <!-- #region Buttons Row 3 -->
            <Button Text="6"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="6"
                    Grid.Column="0"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="5"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="6"
                    Grid.Column="1"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="4"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="6"
                    Grid.Column="2"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="-"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="6"
                    Grid.Column="3"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            <!-- #endregion -->

            <!-- #region Buttons Row 4 -->
            <Button Text="3"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="7"
                    Grid.Column="0"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="2"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="7"
                    Grid.Column="1"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="1"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="7"
                    Grid.Column="2"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            
            <Button Text="+"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="7"
                    Grid.Column="3"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>
            <!-- #endregion -->

            <!-- #region Buttons Row 5 -->
            <Button Text="0"
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="8"
                    Grid.Column="0"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>

            <Button Text="."
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="8"
                    Grid.Column="1"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="80"
                    HeightRequest="90"
                    WidthRequest="90"/>

            <Button Text="="
                    FontSize="25"
                    FontFamily="Ndot-57-Aligned"
                    Grid.Row="8"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    CornerRadius="50"
                    HeightRequest="90"
                    WidthRequest="190"/>
            <!-- #endregion -->
            
            
        </Grid>
    </ScrollView>

</ContentPage>
